[user]
    email = ql@lemonzi.me
    name = Quim Llimona
[alias]
    st = status -sb
    dif = diff --color-words
    sdif = icdiff
    vdif = difftool --tool=vimdiff
    undo = reset --soft HEAD^
    amend = commit --amend -C HEAD
    co = checkout
    c = commit
    ci = commit -m
    ca = commit -am
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    la = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pp = pull --rebase && push
[credential]
    helper = osxkeychain
[diff]
    algorithm = histogram
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = icdiff "$@" | less -R
[core]
    excludesfile = ~/.gitignore
    editor = vim
[push]
    default = matching
[help]
    autocorrect = 1
[color]
    status = auto
    ui = true
[color "status"]
    added = green
    changed = blue
    untracked = magenta
    deleted = red
[hub]
    protocol = https
